<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane stylesheets="@../styles/dark-theme.css" xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.MessageController">
    <children>
      <HBox>
         <children>
              <VBox styleClass="box-tf">
                  <children>
                  <Text fx:id="txtName" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="message-text">
                     <font>
                        <Font size="24.0" />
                     </font>
                  </Text>
                        <HBox alignment="BOTTOM_LEFT" spacing="20.0">
                            <children>
                            <Text fx:id="txtMessage" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="message-text">
                                <font>
                                    <Font size="24.0" />
                                </font>
                            </Text>
                                <Text fx:id="txtDate" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="message-text" text="#Date">
                                    <font>
                                        <Font size="24.0" />
                                    </font>
                                </Text>
                            </children>
                        </HBox>
                  </children>
                  <padding>
                      <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                  </padding>
              </VBox>
         </children>
      </HBox>
    </children>
</AnchorPane>
